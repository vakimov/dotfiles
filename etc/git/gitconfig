# gitconfig_base
[branch]
  autosetuprebase = always
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[push]
  default = simple
[user]
  name = Victor Akimov
[pull]
  rebase = true
[diff]
  external = ~/.dotfiles/etc/git/meld_diff.py
[merge]
  tool = meld
[core]
  autocrlf = input
